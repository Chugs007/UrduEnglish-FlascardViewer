<Window x:Class="FlashCardsViewer.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Height="20">
                <TextBlock HorizontalAlignment="Left"   TextWrapping="Wrap" Text="Urdu Word/Phrase: "  Width="auto"/>
                <TextBox x:Name="txtBoxUrduWord" Margin="10,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Height="20" Width="130"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" >
                <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="English Word/Phrase: " Width="auto"/>
                <TextBox x:Name="txtBoxEnglishWord" Margin="10,0" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="" Width="130"/>
            </StackPanel>
        <StackPanel Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Center" >
        <Button Content="Apply"  Height="22"  Width="94" Click="Button_Apply"/>
        <Button Content="Cancel" Margin="20,0,0,0" Height="22"  Width="108" Click="Button_Cancel"/>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
