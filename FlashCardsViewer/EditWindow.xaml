<Window x:Class="FlashCardsViewer.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditWindow" Height="300" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="19" Margin="39,38,0,0" TextWrapping="Wrap" Text="Urdu Word: " VerticalAlignment="Top" Width="auto"/>
        <TextBox x:Name="txtBoxUrduWord" HorizontalAlignment="Left" Height="19" Margin="109,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130"/>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="39,83,0,0" TextWrapping="Wrap" Text="English Word:" VerticalAlignment="Top" Width="auto" RenderTransformOrigin="0.154,0.667"/>
        <TextBox x:Name="txtBoxEnglishWord" HorizontalAlignment="Left" Height="24" Margin="117,83,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="165"/>
        <Button Content="Apply" HorizontalAlignment="Left" Height="22" Margin="10,217,0,0" VerticalAlignment="Top" Width="94" Click="Button_Apply"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Height="22" Margin="131,217,0,0" VerticalAlignment="Top" Width="108" Click="Button_Cancel"/>
    </Grid>
</Window>
