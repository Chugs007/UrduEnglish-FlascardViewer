<Window x:Class="FlashCardsViewer.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SearchWindow" Height="300" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
       
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock>English Word/Phrase</TextBlock>
            <TextBox x:Name="searchTextBox" Margin="20,0,0,0" Width="100" Height="20"  ></TextBox>
            <Button Margin="20,0,0,0" x:Name="SearchButton" Content="Search" Click="SearchButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
